= render 'top/header'
#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 お疲れ様でした！
      %h2 入力お願いします
    .account-page__inner--right.user-form
      = form_for @report, url: reports_path do |f|
        .field
          .field-input
            = f.date_field :round_at, default: Date.today, use_month_numbers: true
          .field-label
            = f.label :caddy_id, "キャディー番号"
          .field-input
            = f.text_field :caddy_id
          .field-label
            = f.label :bags, "バッグ数"
          .field-input
            = f.number_field :bags
          .actions
            = f.submit "完了"